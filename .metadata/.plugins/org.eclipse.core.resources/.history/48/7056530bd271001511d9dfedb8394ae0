package bucky;

public class SwitchStatement {
	
	public static void main (String args[]){
		
		int age = 3;
		
		switch(age){
		
		case 1:
			System.out.println("You can crawl");
		
		case 2:
			System.out.println("You can talk");
		
		case 3:
			System.out.println("You can get in trouble");
			
		
		
		}
	}

}
